// section styles

.section
  width 80%
  clear both

.heading-title
  clear both

// media block styles

//img on the left

.media
  overflow hidden /* clearfix for floats inside the element */
  padding 40px 0
  .body
    a, p, h2
      font-family $baseFontFamily
      font-size $baseFontSize
      line-height $baseLineHeight
      text-decoration none
      color $baseFontColor

    h2
      font-size 1.4em
      margin 20px 0
      &:hover
        color $colorSecondary
        cursor pointer
    .introduction
      padding 70px 0 0
      line-height 2em
  .img
    float left
    margin-right 40px
  .img img
    display block
  .hand-logo
    height 400px

//img on the right

.media-alt .img
  float right
  margin-right 0
  margin-left 40px

//hand counter styles

.counter,
.instructions
  float left
  overflow hidden
  width 45%
  padding-bottom 40px
  .media
    padding 20px
    border 5px solid black
.instructions-shoulder
  width 100%

.counter
  margin-right 10%

#count
  margin-right 5px